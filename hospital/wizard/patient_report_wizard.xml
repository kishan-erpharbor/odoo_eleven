<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="wizard_patient_report_form">
        <field name="name">print_report.form</field>
        <field name="model">print.report</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="hospital_id"/>
                </group>

                <footer>
                    <button name="check_report" string="Check Report" type="object" default_focus="1"
                            class="oe_highlight"/>
                    or
                    <button string="Annuler" class="oe_link" special="cancel"/>
                </footer>
            </form>


        </field>
    </record>
     <record id="action_wizard_patient_report" model="ir.actions.act_window">
        <field name="name">Print Report</field>
        <field name="res_model">print.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_patient" name="Patient Report" parent="menu_hospital_main" action="action_wizard_patient_report"/>

</odoo>