<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_patient">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Patient Report</h2>
                        <p>Patient's name is :
                            <span t-field="o.name"/>
                        </p>
                        <p>Patient Age :
                            <span t-field="o.age"/>
                        </p>
                        <p>Gender :
                            <span t-field="o.gender"/>
                        </p>
                        <p>Status :
                            <span t-field="o.status"/>
                        </p>
                        <p>Mobile Number :
                            <span t-field="o.number"/>
                        </p>
                        <p>City :
                            <span t-field="o.city"/>
                        </p>
                        <p>Hospital Name :
                            <span t-field="o.hospital_id"/>
                        </p>
                        <p>Image :
                            <span t-field="o.image"
                                  t-field-options='{"widget": "image","style":"background-color: #fff;margin-left: auto;margin-right: auto;width: auto;height: 100px;margin-bottom: 8px;"}'/>
                        </p>

                        <p>Many2many Relationship</p>
                        <p>
                            <tr t-foreach="o.payment_ids" t-as="line">
                                <td>
                                    <p>
                                        <span t-field="line.payment"/>
                                    </p>
                                </td>
                            </tr>
                            <tr t-foreach="o.ward_ids" t-as="line">
                                <td>
                                    <p>
                                        <span t-field="line.name"/>
                                    </p>
                                </td>
                            </tr>
                        </p>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
